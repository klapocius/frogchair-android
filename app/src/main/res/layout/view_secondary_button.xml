<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/black"
    tools:layout_height="130dp"
    tools:layout_width="110dp">

    <Space
        android:id="@+id/view_secondary_button_top_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.036"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/view_secondary_button_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        android:clickable="false"
        android:scaleType="fitXY"
        android:src="@drawable/selector_button_secondary"
        app:layout_constraintBottom_toTopOf="@+id/view_secondary_button_text"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_secondary_button_top_margin"
        app:layout_constraintWidth_percent="0.75" />

    <View
        android:id="@+id/view_secondary_button_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_band"
        app:layout_constraintBottom_toBottomOf="@id/view_secondary_button_button"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@id/view_secondary_button_button"
        app:layout_constraintStart_toStartOf="@id/view_secondary_button_button"
        app:layout_constraintTop_toTopOf="@id/view_secondary_button_button"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/view_secondary_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build"
        android:textColor="@color/white"
        android:textSize="9sp"
        app:layout_constraintBottom_toTopOf="@id/view_secondary_button_bottom_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_secondary_button_button" />

    <Space
        android:id="@+id/view_secondary_button_bottom_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.036" />

</androidx.constraintlayout.widget.ConstraintLayout>