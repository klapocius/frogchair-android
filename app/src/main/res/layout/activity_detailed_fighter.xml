<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_detailed_fighter_toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_fighter"
        app:layout_constraintBottom_toTopOf="@id/detailed_fighter_navigation_line_black"
        app:layout_constraintTop_toBottomOf="@id/detailed_fighter_toolbar_bottom" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/detailed_fighter_tribe_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.4"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/detailed_fighter_lore_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.6005472"
        app:layout_constraintStart_toStartOf="parent" />

    <include layout="@layout/include_detailed_fighter_general_info" />

    <include layout="@layout/include_detailed_fighter_social" />

    <include layout="@layout/include_detailed_fighter_lore_and_skill" />

    <include layout="@layout/include_detailed_fighter_fighter" />

    <include layout="@layout/include_detailed_fighter_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>