<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="40dp"
    tools:layout_width="85dp">

    <ProgressBar
        android:id="@+id/view_user_level_progress_bar"
        style="@style/RegenProgressBar"
        android:progress="30"
        android:progressDrawable="@drawable/progress_bar_user_level"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_user_level_background" />

    <View
        android:id="@+id/view_user_level_background"
        style="@style/RegenLogoBackground"
        android:background="@drawable/ic_current_level" />

    <TextView
        android:id="@+id/view_user_level_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:text="199"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/view_user_level_background"
        app:layout_constraintDimensionRatio="1.66"
        app:layout_constraintEnd_toEndOf="@id/view_user_level_background"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="@id/view_user_level_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <TextView
        android:id="@+id/view_user_level_progress_text"
        style="@style/RegenWhiteText"
        android:text="39"
        app:layout_constraintBottom_toBottomOf="@id/view_user_level_progress_bar"
        app:layout_constraintEnd_toEndOf="@id/view_user_level_progress_bar"
        app:layout_constraintStart_toStartOf="@id/view_user_level_progress_bar"
        app:layout_constraintTop_toTopOf="@id/view_user_level_progress_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>