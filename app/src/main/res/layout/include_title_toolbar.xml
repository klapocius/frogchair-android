<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_mission_list">

    <View
        android:id="@+id/title_toolbar_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_toolbar"
        app:layout_constraintDimensionRatio="@dimen/toolbar_width_ratio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_toolbar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dot_bold"
        android:shadowColor="#3199b7"
        android:shadowDy="8"
        android:shadowRadius="3"
        android:text="NORMAL MODE"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/title_toolbar_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/title_toolbar_text_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/toolbar_text_line"
        app:layout_constraintBottom_toBottomOf="@id/title_toolbar_background" />

    <View
        android:id="@+id/title_toolbar_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/toolbar_bottom_line"
        app:layout_constraintTop_toBottomOf="@id/title_toolbar_background" />

    <View
        android:id="@+id/title_home_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/selector_home"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/title_toolbar_bottom_line"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_toolbar_background" />

    <View
        android:id="@+id/title_toolbar_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mission_list_subtoolbar_top_line"
        app:layout_constraintTop_toBottomOf="@id/title_toolbar_bottom_line" />

</merge>