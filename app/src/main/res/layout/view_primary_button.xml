<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="130dp"
    tools:layout_width="200dp">

    <ImageButton
        android:id="@+id/view_primary_button_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        android:clickable="false"
        android:scaleType="fitXY"
        android:src="@drawable/selector_button_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.47"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.85" />

    <View
        android:id="@+id/view_primary_button_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_primary_mission"
        app:layout_constraintBottom_toTopOf="@+id/view_primary_button_resume"
        app:layout_constraintDimensionRatio="1.43"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.41" />

    <View
        android:id="@+id/view_primary_button_resume"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_primary_resume"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_primary_button_line"
        app:layout_constraintWidth_percent="0.71" />

    <ImageView
        android:id="@+id/view_primary_button_go"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_primary_go"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/view_primary_button_button"
        app:layout_constraintDimensionRatio="1.62"
        app:layout_constraintEnd_toEndOf="@+id/view_primary_button_button"
        app:layout_constraintHeight_percent="0.67"
        app:layout_constraintStart_toStartOf="@+id/view_primary_button_button"
        app:layout_constraintTop_toTopOf="@+id/view_primary_button_button" />

    <TextView
        android:id="@+id/view_primary_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/fighter_list_header"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/view_primary_button_button"
        app:layout_constraintEnd_toEndOf="@id/view_primary_button_button"
        app:layout_constraintStart_toStartOf="@id/view_primary_button_button"
        app:layout_constraintTop_toTopOf="@id/view_primary_button_button" />

</androidx.constraintlayout.widget.ConstraintLayout>