<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="500dp">

    <View
        android:id="@+id/mission_background_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/w01_r01_1_top"
        android:scaleType="fitStart"
        app:layout_constraintDimensionRatio="4"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/mission_background_middle_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/mission_background_top"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintTop_toTopOf="@id/mission_background_top"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/mission_background_middle_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/w01_r01_1_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mission_background_middle_top" />

    <View
        android:id="@+id/mission_background_middle_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/w01_r01_1_main"
        app:layout_constraintBottom_toBottomOf="@id/mission_background_middle_1"
        app:layout_constraintDimensionRatio="1.53"
        app:layout_constraintStart_toEndOf="@id/mission_background_middle_1"
        app:layout_constraintTop_toTopOf="@id/mission_background_middle_1" />

    <View
        android:id="@+id/mission_background_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/w01_r01_1_bot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="5.3"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/mission_main_fighter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/fighter_205412_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="@dimen/fighter_ratio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="@dimen/home_fighter_width_percent_line_1" />

</androidx.constraintlayout.widget.ConstraintLayout>