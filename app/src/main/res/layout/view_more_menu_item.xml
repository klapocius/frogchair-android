<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="130dp"
    tools:layout_width="110dp">

    <View
        android:id="@+id/view_more_menu_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="@dimen/alpha_disabled"
        android:background="@drawable/img_menu_store"
        app:layout_constraintBottom_toTopOf="@id/view_more_menu_text"
        app:layout_constraintDimensionRatio="1.13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.66" />

    <TextView
        android:id="@+id/view_more_menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily shop"
        android:textColor="@color/grey_background"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_more_menu_image" />

</androidx.constraintlayout.widget.ConstraintLayout>