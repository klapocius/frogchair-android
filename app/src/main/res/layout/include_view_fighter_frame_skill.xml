<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/view_fighter_frame">

    <View
        android:id="@+id/view_fighter_frame_skill_proc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_proc_ready_no_shadow"
        android:visibility="gone"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="@id/view_fighter_simple_weapon_frame"
        app:layout_constraintTop_toTopOf="@id/view_fighter_simple_weapon_frame"
        app:layout_constraintWidth_percent="0.16"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/view_fighter_frame_skill_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingStart="2dp"
        android:text="Thwart (Elite)"
        android:textColor="@color/fighter_skill"
        android:textSize="11sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/view_fighter_simple_rarity"
        app:layout_constraintStart_toStartOf="@id/view_fighter_simple_border"
        app:layout_constraintTop_toBottomOf="@id/view_fighter_frame_skill_proc"
        tools:visibility="visible" />

    <View
        android:id="@+id/view_fighter_frame_skill_type"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/ic_wis_grey"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/view_fighter_simple_border"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@id/view_fighter_simple_border"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@id/view_fighter_simple_weapon_frame"
        app:layout_constraintWidth_percent="0.15"
        tools:visibility="visible" />

</merge>