<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/band_fighter_button_background_1" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/band_fighter_button_background_2" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">

            <gradient
                android:angle="0"
                android:centerColor="@color/band_fighter_button_background_4"
                android:centerX="0"
                android:centerY="0.5"
                android:endColor="@color/band_fighter_button_background_4"
                android:startColor="@color/band_fighter_button_background_3"
                android:type="sweep" />
        </shape>

    </item>

</layer-list>